# Frontend Local Development Environment Variables
# Mini EdTech Platform - Local Development Configuration

# ===========================================
# API CONFIGURATION
# ===========================================
# GraphQL API URL - Local development backend
NEXT_PUBLIC_GRAPHQL_URL="http://localhost:4000/graphql"

# ===========================================
# APP CONFIGURATION
# ===========================================
# Application Name
NEXT_PUBLIC_APP_NAME="Mini EdTech Platform"

# Application Version
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ===========================================
# FEATURE FLAGS
# ===========================================
# Analytics (disabled for development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Debug Mode (enabled for development)
NEXT_PUBLIC_ENABLE_DEBUG=true