# Environment Variables Template for Mini EdTech Platform
# Copy this file to .env and update the values

# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database_name"

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secure-jwt-secret-key"

# Server Configuration
PORT=4000
NODE_ENV="production"

# Frontend URL for CORS
FRONTEND_URL="https://educourse-5dx4.onrender.com"

# Database Settings
DATABASE_CONNECTION_LIMIT=10
DATABASE_TIMEOUT=30000

# Security Settings
BCRYPT_ROUNDS=12

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# GraphQL API URL
NEXT_PUBLIC_GRAPHQL_URL="https://educourse-backend.onrender.com/graphql"

# App Configuration
NEXT_PUBLIC_APP_NAME="Mini EdTech Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false